
<div id='recentBuildsContent' class='contentContainer contentColumnFull contentLeft'>

  <table class='table table-striped table-hover'>
    <thead>
      <th class='result'>Result</th>
      <th class='package'>Package</th>
      <th class='dist'>Dist</th>
      <th class='buildTime'>Time</th>
      <th class='trend'>Trend</th>
    </thead>
    <tbody>
    <% @stats[:latest].each do |row| %>
      <tr>
        <% if row.success == true
             circleColor = 'limegreen'
           else
             circleColor = 'red'
           end
        %>
        <td>
          <svg id='resultCell'  xmlns="http://www.w3.org/2000/svg" version="1.1">
            <defs>
              <filter id="drop-shadow">
                <feGaussianBlur in="SourceGraphic" stdDeviation="1" />
              </filter>
            </defs>
            <circle class='resultCircle' r='8' cx='20' cy='15' filter="url(#drop-shadow)"
              fill=<%= "#{circleColor}" %>>
          </svg>
        </td>
        <td><%= row.package_name %></td>
        <td><%= row.dist %></td>
        <td><%= "#{row.jenkins_build_time.round(0)} sec" %></td>
        <td></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div id='summariesContent' class='contentContainer contentColumnHalf contentRight contentTop'></div>
<div id='buildHostContent' class='contentContainer contentColumnHalf contentRight contentBottom'>
